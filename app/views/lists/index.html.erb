<div class="container">
  <div class="row mt-5">
    <h1>My Lists</h1>

    <% @lists.each do |list| %>
    <div class="col-4 mb-3">
      <div class="card" style="width: 18rem">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, crop: :fill%>
         <% else %>
          <%= image_tag('banner.jpg') %>
        <% end %>
        <div class="card-body"><%= link_to list.name, list_path(list) %></div>
      </div>
    </div>
    <% end %>

  </div>
</div>
