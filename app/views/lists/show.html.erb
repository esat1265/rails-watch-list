<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-between">
      <h1><%= @list.name %></h1>
      <button style= "width:100px" type="button" class="btn btn-warning" disabled><%= @movies.count %> movies</button>
    </div>

  </div>

  <div class="row mt-4">
    <% @movies.each do |movie| %>
      <div class="col-md-6 mb-3">
        <div class="card" style="width: 18rem;">
          <img src=<%= movie.poster_url %> class="card-img-top" alt="...">
          <div class="card-body">
            <h6 class="card-title"><%= movie.title %> <span> <%= movie.rating %> ‚≠ê</span></h6>

            <p class="card-text"><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to "Back to List", lists_path %>
  </div>
</div>
